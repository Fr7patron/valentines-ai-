export default async function handler(req, res) {
    if (req.method !== "POST") return res.status(405).json({ error: "Method not allowed" });

    const { message } = req.body;

    const response = await fetch(https://vercel.com/firas-projects-44dbf027/valentines-ai-x1vm/6XGtX7SKRu6Zr988EdKZ3RxjaC6H, {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
            "Authorization": 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
        body: JSON.stringify({
            model: "gpt-3.5-turbo",
            messages: [{ role: "system", content: "You are a romantic Valentine's Day assistant." }, { role: "user", content: message }]
        })
    });

    const data = await response.json();
    res.status(200).json({ reply: data.choices[0].message.content });
}
